{
	"exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": false,
    "allowArbitraryExtensions": true,
    "strict": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "~/*": ["./src/*"]
    }
  }
}
